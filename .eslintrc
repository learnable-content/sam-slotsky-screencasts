{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "plugins": ["react"],
  "rules": {
    "new-cap": [2, { "capIsNewExceptions": ["List", "Map"] }],
    "semi": [2, "never"],
    "comma-dangle": [2, "never"],
    "react/prefer-stateless-function": ["off"],
    "no-constant-condition": ["off"]
  }
}
